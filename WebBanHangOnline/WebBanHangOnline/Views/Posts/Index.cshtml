@model PagedList.PagedList<WebBanHangOnline.Models.EF.Posts>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        margin-top: auto;
        padding-bottom: 10px;
        border-bottom: solid 1px #ebebeb;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .title-news ul {
        margin-top: auto;
        padding-bottom: 10px;
        border-bottom: solid 1px #ebebeb;
    }

        .title-news ul li {
            display: inline-block;
            margin-right: 10px; 
        }
            .title-news ul li.active a {
                color: #b9b4c7;
            }
            .title-news ul li i {
                margin-right: 17px;
            }
            
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <div class="title-news">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a></li>
                </ul>
            </div>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new">
                <div class="col-md-12">
                    <div class="img-box" style="padding-bottom: 10px;">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="content-box" style="margin-top: 10px;">
                        <h3><a href="/@item.Alias-n@(item.Id)" title="@item.Title">@item.Title</a></h3>
                        <div class="description-box">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6" style="text-align:right;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    }

</div>
